valor1 = 9
valor2 = 0

calc = 'soma'

if (calc =='soma'):
    resultado = valor1 + valor2
elif(calc=='multiplicacao'):
    resultado = valor1 * valor2
elif(calc=='subtracao'):
    resultado = valor1-valor2
elif(calc=='divisao'):
    if(valor1==0 or valor2==0):
        resultado = "Erro, não é possível dividir por 0"
    else:
        resultado=valor1/valor2
else:
    resultado = "Não é uma operacao válida"

print(resultado)
